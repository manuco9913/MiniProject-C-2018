<Page x:Class="PL_WpfApp.FirstPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PL_WpfApp"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="800"
      Title="MainWindow">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid Margin="10,10,10,10" Grid.ColumnSpan="3">
            <TextBlock Text="Welcome to the new system of licensing tests" FontSize="34" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center" Foreground="Black"  />
        </Grid>
        <Grid Grid.Row="1" Grid.RowSpan="3" Grid.ColumnSpan="3">
            <TabControl>
                <TabItem Header="Trainee">
                    <Grid Background="#FFE5E5E5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid Margin="10,10,10,10" Grid.Row="1">
                            <Button Content="Add Trainee" FontSize="30" Click="Button_Click"/>
                        </Grid>
                        <Grid Grid.Column="1" Grid.Row="1" Margin="10,10,10,10">
                            <Button Content="Update Trainee" FontSize="30" Click="Click_UpdateTrainee"/>
                        </Grid>
                        <Grid Grid.Column="2" Grid.Row="1" Margin="10,10,10,10">
                            <Button Content="Remove Trainee" FontSize="30"/>
                        </Grid>
                    </Grid>
                </TabItem>
                <TabItem Header="Tester">
                    <Grid Background="#FFE5E5E5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid Margin="10,10,10,10" Grid.Row="1">
                            <Button Content="Add Tester" FontSize="30"/>
                        </Grid>
                        <Grid Grid.Column="1" Grid.Row="1" Margin="10,10,10,10">
                            <Button Content="Update Tester" FontSize="30"/>
                        </Grid>
                        <Grid Grid.Column="2" Grid.Row="1" Margin="10,10,10,10">
                            <Button Content="Remove Tester" FontSize="30"/>
                        </Grid>
                    </Grid>
                </TabItem>
                <TabItem Header="Test">
                    <Grid Background="#FFE5E5E5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid Margin="10,10,10,10" Grid.Row="1">
                            <Button Content="Add Test" FontSize="30"/>
                        </Grid>
                        <Grid Grid.Column="1" Grid.Row="1" Margin="10,10,10,10">
                            <Button Content="Update Test" FontSize="30"/>
                        </Grid>
                        <Grid Grid.Column="2" Grid.Row="1" Margin="10,10,10,10">
                            <Button Content="Remove Test" FontSize="30"/>
                        </Grid>
                    </Grid>
                </TabItem>                
            </TabControl>
        </Grid>
    </Grid>
</Page>