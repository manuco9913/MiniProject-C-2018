<Page x:Class="PL_WpfApp.FirstPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PL_WpfApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page2">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="67*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Welcome to the new system of licensing tests" FontSize="36" TextAlignment="Center" Foreground="Black" Grid.Row="0" FontWeight="Bold" FontFamily="Showcard Gothic" />
        <TextBox x:Name="UsernameTextBox" Grid.Row="1" Foreground="DarkGray" Background="{x:Null}" TextWrapping="Wrap" Text="Username" VerticalAlignment="Top" Margin="272.403,93.506,323.052,0" Height="43.284" FontSize="24" GotFocus="UsernameTextBox_GotFocus"/>
        <PasswordBox x:Name="Password_User" Grid.Row="1" Background="{x:Null}"  HorizontalAlignment="Left" Height="27.273" Margin="272.403,169.925,0,0"  VerticalAlignment="Top" Width="204.545" FontSize="22"/>
        <Button Content="Sign in" HorizontalAlignment="Left" Height="27.273" Margin="272.403,226.418,0,0" Grid.Row="1" VerticalAlignment="Top" Width="204.545" Click="ButtonClickTo_AddUser"/>
        <Label Name="label" Content="sign in" HorizontalAlignment="Left" Height="64.211" Margin="38,93.506,0,0" Grid.Row="1" VerticalAlignment="Top" Width="138" FontSize="20">
            <Label.Style>
                <Style TargetType="{x:Type Label}">
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Foreground" Value="Red"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Label.Style >
        </Label>
    </Grid>
    
</Page>
