<Page x:Class="PL_WpfApp.FirstPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PL_WpfApp"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="720"
      Title="MainWindow">

    <Grid Margin="-1.5,0,1.5,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Welcome to the new system of licensing tests" Margin="10,10,10,10" FontSize="34" TextAlignment="Center" Foreground="Black" Grid.Row="0" />
        <TextBox x:Name="UsernameTextBox" Grid.Row="2" MinWidth="112" Foreground="DarkGray" Background="{x:Null}" TextWrapping="Wrap" Text="Username" HorizontalAlignment="Center" VerticalAlignment="Center" Height="44" FontSize="24" GotFocus="UsernameTextBox_GotFocus" Cursor="Hand">


        </TextBox>
        <PasswordBox x:Name="Password_User" Grid.Row="3" Background="{x:Null}"  HorizontalAlignment="Center" Height="27.273" VerticalAlignment="Center" Width="204.545" FontSize="22"/>
        <Button Content="Sign in" HorizontalAlignment="Center" VerticalAlignment="Center" Height="27.273" Grid.Row="4" Width="200" Click="ButtonClickTo_AddUser"/>


    </Grid>
</Page>

